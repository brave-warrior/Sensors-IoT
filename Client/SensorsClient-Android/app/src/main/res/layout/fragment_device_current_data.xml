<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              tools:context=".ui.fragment.DeviceCurrentDataFragment">

    <TextView
        android:id="@+id/device_current_timestamp"
        style="@style/Header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="20dp"
        android:paddingTop="35dp"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:paddingBottom="3dp"
        android:paddingTop="10dp"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            >

            <TextView
                android:id="@+id/device_current_temperature_hint"
                style="@style/GeneralText.Light.Center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/device_data_temperature_hint"
                android:visibility="invisible"
                />

            <TextView
                android:id="@+id/device_current_temperature"
                style="@style/Header.Huge"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            >

            <TextView
                android:id="@+id/device_current_humidity_hint"
                style="@style/GeneralText.Light.Center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/device_data_humidity_hint"
                android:visibility="invisible"
                />

            <TextView
                android:id="@+id/device_current_humidity"
                style="@style/Header.Huge"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>
