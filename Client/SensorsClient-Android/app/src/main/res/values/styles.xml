<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
        <item name="android:textColorPrimary">@color/black_dark</item>
        <item name="android:textColorSecondary">@color/gray</item>
        <item name="android:divider">@color/divider</item>
        <item name="android:textColorPrimaryInverse">@color/white</item>

    </style>

    <!-- ToolBar -->
    <style name="ToolBarStyle" parent="Theme.AppCompat">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
        <item name="android:textColorPrimary">@android:color/white</item>
        <item name="android:textColorSecondary">@android:color/white</item>
        <item name="actionMenuTextColor">@android:color/white</item>
    </style>

    <!-- Empty view -->
    <style name="ViewEmpty">
        <item name="android:gravity">center</item>
        <item name="android:textSize">20sp</item>
    </style>

    <!-- Style of the CardView container -->
    <style name="CardViewContainer" parent="CardView">
        <item name="android:layout_margin">5dp</item>
        <item name="android:clickable">true</item>
        <item name="android:foreground">?android:attr/selectableItemBackground</item>
        <item name="cardCornerRadius">1dp</item>
        <item name="contentPadding">10dp</item>
    </style>

    <!-- Style for the text in view build -->
    <style name="GeneralText">
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingLeft">2dp</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="GeneralText.Light" parent="GeneralText">
        <item name="android:textColor">@color/gray</item>
    </style>

    <style name="GeneralText.Light.Center" parent="GeneralText">
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/gray</item>
    </style>

    <style name="GeneralText.Secondary.Center" parent="GeneralText">
        <item name="android:gravity">center</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/gray</item>
    </style>

    <style name="GeneralText.Title.Center" parent="GeneralText">
        <item name="android:gravity">center</item>
        <item name="android:textSize">27sp</item>
    </style>

    <style name="Header" parent="GeneralText">
        <item name="android:gravity">center</item>
        <item name="android:textSize">28sp</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingBottom">5dp</item>
    </style>

    <style name="Header.Huge" parent="Header">
        <item name="android:textSize">35sp</item>
    </style>

</resources>
